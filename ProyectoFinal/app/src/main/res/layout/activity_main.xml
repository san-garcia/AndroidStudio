<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <!--Logo de la aplicacion-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="398dp"
        android:layout_height="226dp"
        android:contentDescription="Logo de la aplicacion"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Bienvenida a la app más segura"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <Button
        android:id="@+id/iniciarSesion"
        android:layout_width="263dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#bb5a7c"
        android:padding="12dp"
        android:text="Iniciar sesión"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvenida" />

    <Button
        android:id="@+id/registrarse"
        android:layout_width="268dp"
        android:layout_height="56dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#bb5a7c"
        android:padding="12dp"
        android:text="Registrarte"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvenida" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="398dp"
        android:layout_height="226dp"
        android:layout_marginTop="468dp"
        android:contentDescription="Imagen de la app"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>