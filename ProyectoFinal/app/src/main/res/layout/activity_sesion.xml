<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andorid="http://schemas.android.com/tools">

    <!-- Fondo de la p치gina-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mapa" />

    <!--Logo de la aplicacion-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="412dp"
        android:layout_height="129dp"
        android:contentDescription="Logo de la aplicacion"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/tanseek_modern_pro_arabic"
        android:text="Iniciar sesi칩n"
        android:textColor="#c6b3f1"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />


    <TextView
        android:id="@+id/usuario"
        android:layout_width="325dp"
        android:layout_height="76dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/tanseek_modern_pro_arabic"
        android:text="Introduce tu correo electr칩nico o nombre de usuario"
        android:textColor="#c6b3f1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <EditText
        android:id="@+id/cajaUsuario"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="#edeeff"
        android:fontFamily="@font/tanseek_modern_pro_arabic"
        android:inputType="text"
        android:padding="3dp"
        android:radius="15dp"
        android:textSize="26sp"
        andorid:layout_editor_absoluteX="49dp"
        app:layout_constraintTop_toBottomOf="@id/usuario" />

    <TextView
        android:id="@+id/contrasenya"
        android:layout_width="268dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/tanseek_modern_pro_arabic"
        android:text="Introduce tu contrase침a"
        android:textColor="#c6b3f1"
        android:textSize="30sp"
        andorid:layout_editor_absoluteY="375dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cajaContrasenya"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#edeeff"
        android:fontFamily="@font/tanseek_modern_pro_arabic"
        android:inputType="text"
        android:padding="3dp"
        android:radius="15dp"
        android:textSize="26sp"
        andorid:layout_editor_absoluteX="49dp"
        app:layout_constraintTop_toBottomOf="@id/contrasenya" />

    <Button
        android:id="@+id/iniciarSesion"
        android:layout_width="263dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#bb5a7c"
        android:padding="12dp"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cajaContrasenya" />

</androidx.constraintlayout.widget.ConstraintLayout>